generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  tasks Task[] // relacionamento 1:N (um usuÃ¡rio -> muitas tarefas)

  @@map("users")
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  priority    Priority
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id]) //relacionamento

  @@map("tasks")
}
